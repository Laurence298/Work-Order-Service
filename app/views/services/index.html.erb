<div class="w-[500px]  p-6">
  <div class="grid sm:grid-cols-2  gap-4">
    <% if @services.any? %>
      <%= render ServiceComponent.with_collection(@services) %>
    <% else %>
      <p class="text-gray-500 italic">No services found.</p>
    <% end %>
  </div>

  <div class="mt-6 space-x-4">
    <%= link_to "New Service", new_service_path, class:"btn btn-primary" %>
  </div>
</div>
