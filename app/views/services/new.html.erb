
<div>
  <h1 class="text-2xl font-bold mb-4">Create a new service</h1>

<p class="mb-6 text-gray-700">Fill in the details to create a new service:</p>

<%= form_with model: @service, class: "space-y-6 max-w-md" do |form| %>
  <div>
    <%= form.label :name, class: "block mb-1 font-semibold text-gray-800" %>
    <%= form.text_field :name, class:"input validator" %>
  </div>

  <div>
    <%= form.label :description, class: "block mb-1 font-semibold text-gray-800" %>
    <%= form.text_area :description, rows: 4, class:"textarea" %>
  </div>

  <div>
    <%= form.submit "Create Service", class:"btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", services_path, class:"link link-secondary mt-4" %>

</div>