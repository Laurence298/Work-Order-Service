
<div>
  <h1 class="text-2xl font-bold mb-4">Create a new service</h1>

<p class="mb-6 text-gray-700">Fill in the details to create a new service:</p>

<%= form_with model: @service, class: "space-y-6 max-w-md" do |form| %>
  <div>
    <%= form.label :name, class: "block mb-1 font-semibold text-gray-800" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :description, class: "block mb-1 font-semibold text-gray-800" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.submit "Create Service", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition" %>
  </div>
<% end %>

<%= link_to "Back", services_path, class: "inline-block mt-4 text-indigo-600 hover:underline " %>

</div>