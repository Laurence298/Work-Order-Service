<div>
<h1 class="text-3xl font-bold mb-2"><%= @service.name %></h1>
<p class="text-gray-700 mb-6"><%= @service.description %></p>

<hr class="my-6 border-gray-300">

<h2 class="text-2xl font-semibold mb-4">Service Plans</h2>

<% if @service.service_details.any? %>
  <ul class="space-y-4 mb-6">
    <% @service.service_details.each do |detail| %>
      <li class="p-4 border rounded shadow-sm bg-white">
        <strong class="text-lg font-semibold"><%= detail.service_plan %></strong> -
        <span class="text-blue-600 font-medium">$<%= number_with_precision(detail.price, precision: 2) %></span><br>
        <p class="text-gray-600 mt-1"><%= detail.features %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-gray-500 italic mb-6">No plans yet.</p>
<% end %>


</div  >
<div class="mt-6">
  <h2 class="text-2xl font-semibold mb-4">Add a New Service Plan</h2>
  <%= render 'service_details/form', service: @service, service_detail: @service_detail %>
</div>
