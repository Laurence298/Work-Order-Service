<aside class="w-64 h-screen  shadow fixed top-0 left-0 hidden md:block">
  <div class="p-6">
    <h1 class="text-xl font-bold mb-6">My Dashboard</h1>
    <nav class="space-y-2">
       <%= link_to "Home", root_path,
          class: "block px-4 py-2 rounded  " + (current_page?(root_path) ? "bg-gray-50 font-semibold" : "") %>

      <%= link_to "Services", services_path,
          class: "block px-4 py-2 rounded  " + (current_page?(services_path) ? "bg-gray-50 font-semibold" : "") %>
      <%= link_to "Request", requested_services_path,
          class: "block px-4 py-2 rounded  " + (current_page?(requested_services_path) ? "font-semibold" : "") %>
      
      <% if authenticated? %>
        <%= button_to "Log out", session_path, method: :delete,
            class: "block px-4 py-2 rounded" %>
      <% end %>
   
    </nav>
  </div>
</aside>
