<%= form_with(model: [@service, @service_detail], local: true, class: "max-w-md mx-auto p-4 bg-white rounded shadow") do |f| %>
  <div class="mb-4">
    <%= f.label :service_plan, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_field :service_plan, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="mb-4">
    <%= f.label :features, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_area :features, rows: 4, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="mb-6">
    <%= f.label :price, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.number_field :price, step: 0.01, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div>
    <%= f.submit "Add Plan", class: "w-full bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition" %>
  </div>
<% end %>
