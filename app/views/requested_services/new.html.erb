<%= form_with model: @requested_service do |f| %>
  <h3>Customer info</h3>
  <%= f.fields_for :customer do |c| %>
    <div>
      <%= c.label :name %>
      <%= c.text_field :name required: true%>
    </div>
    <div>
      <%= c.label :email %>
      <%= c.email_field :email %>
    </div>
    <div>
      <%= c.label :phone_number %>
      <%= c.telephone_field :phone_number %>
    </div>
  <% end %>

  <!-- Dropdown to select existing service -->
  <%= f.collection_select :service_id, Service.all, :id, :name, prompt: "Select a Service" %>

  <h3>Address info</h3>
  <%= f.fields_for :address do |a| %>
    <div>
      <%= a.label :street %>
      <%= a.text_field :street %>
    </div>
    <div>
      <%= a.label :city %>
      <%= a.text_field :city %>
    </div>
    <div>
      <%= a.label :province %>
      <%= a.text_field :province %>
    </div>
    <div>
      <%= a.label :postal_code %>
      <%= a.text_field :postal_code %>
    </div>
    <div>
      <%= a.label :country %>
      <%= a.text_field :country %>
    </div>
  <% end %>

  <%= f.submit "Create Requested Service" %>
<% end %>