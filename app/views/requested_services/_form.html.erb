<%= form_with model: @requested_service, class: "space-y-8 bg-white p-8 rounded-xl shadow-md" do |f| %>
  <h3 class="text-xl font-semibold border-b pb-2">Customer Info</h3>
  <%= f.fields_for :customer do |c| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= c.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= c.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= c.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= c.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="md:col-span-2">
        <%= c.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
        <%= c.telephone_field :phone_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :service_id, "Select a Service", class: "block text-sm font-medium text-gray-700" %>
    <%= f.collection_select :service_id, Service.all, :id, :name, { prompt: "Select a Service" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <h3 class="text-xl font-semibold border-b pb-2">Address Info</h3>
  <%= f.fields_for :address do |a| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= a.label :street, class: "block text-sm font-medium text-gray-700" %>
        <%= a.text_field :street, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= a.label :city, class: "block text-sm font-medium text-gray-700" %>
        <%= a.text_field :city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= a.label :province, class: "block text-sm font-medium text-gray-700" %>
        <%= a.text_field :province, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= a.label :postal_code, class: "block text-sm font-medium text-gray-700" %>
        <%= a.text_field :postal_code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="md:col-span-2">
        <%= a.label :country, class: "block text-sm font-medium text-gray-700" %>
        <%= a.text_field :country, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.submit "Submit  ", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
